#include <stdio.h>

int main()
{
	int temp, i, nums[6];
	int shuffled[6];
	int n = 0;
	int j = 0;
	int k = 0;
	
	for (i = 0; i < 6; i++)
	{
		printf("Enter number %d: ", i+1);
		scanf("%d", &nums[i]);
		n += 1;
	}
	
	n = n/2;
	
	for (i = 0; i < 6; i++)
	{
		if ( i%2 == 0 )
		{
			shuffled[i] = nums[i-k];      
			k = k + 1;                                                                          
		}	else	{
			shuffled[i] = nums[n+j];
			j = j + 1;  
		}
	}

	printf("The shuffled array is: ");      
	
	for (i = 0; i < 6; i++)
	{
		printf("%d ", shuffled[i]);
	}
	
	return 0;
}	
