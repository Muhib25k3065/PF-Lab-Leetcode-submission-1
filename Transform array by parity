#include <stdio.h>

int main()
{
	int i, j, temp, nums[5];
	
	for (i = 0; i < 5; i++)
	{
		printf("Enter number %d: ", i+1);
		scanf("%d", &nums[i]);
	}

	printf("\nNormal numbers: ");
	
	for (i = 0; i < 5; i++)
	{
		printf("%d ", nums[i]);
	}

	for (i = 0; i < 5; i++)
	{
		if ( nums[i]%2 == 0 )
		{
			nums[i] = 0;
		}	else	{
			nums[i] = 1;
		}
	}
	
	printf("\n");
	printf("\nReplacing even numbers with 0 and odd numbers with 1: ");
	
	for (i = 0; i < 5; i++)
	{
		printf("%d ", nums[i]);
	}
	
	for (i = 0; i < 5; i++)
	{
			for (j = 0; j < 4; j++)
		{
			if ( nums[j] > nums[j+1] )
			{
				temp = nums[j];
				nums[j] = nums[j+1];
				nums[j+1] = temp;
			}
		}	
	}	
	
	printf("\n");
	printf("\nAfter sorting the numbers in non-decreasing order: ");
	
	for (i = 0; i < 5; i++)
	{
		printf("%d ", nums[i]);
	}
	
	return 0;
}
